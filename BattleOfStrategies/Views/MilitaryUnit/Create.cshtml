@model MilitaryUnit
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<form method="post">
    <fieldset class="border p-3 mt-5">
        <div class="row pb-2">Create Military Unit</div>
        <div asp-validation-summary="All"></div>
        <div class="form-group" bis_skin_checked="1">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name" class="form-control" aria-describedby="name" placeholder="name...">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @*LEVEL*@
        <div class="form-group" bis_skin_checked="1">
            <label asp-for="Level" class="form-label mt-4"></label>
            <select asp-for="Level" class="form-select" disabled="">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        @*HP*@
        <slider for-name="HP" min="1" max="3" step="0.1"></slider>
        @*Damage*@
        <slider for-name="Damage" min="0.1" max="1" step="0.1"></slider>
        @*Aim*@
        <slider for-name="Aim" min="0.1" max="0.9" step="0.1"></slider>
        @*Range*@
        <slider for-name="Range" min="1" max="10" step="1"></slider>
        @*AffectedArea*@
        <slider for-name="AffectedArea" min="1" max="3" step="1"></slider>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="MilitaryUnit" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </fieldset>
</form>

<script>
    function updateSliderValue(value, outputId) {
        document.getElementById(`${outputId}`).textContent = value;
    }   
</script>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
